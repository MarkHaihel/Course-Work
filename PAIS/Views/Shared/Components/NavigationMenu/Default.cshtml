@model IEnumerable<string>

<a class="btn btn-block btn-secondary"
   asp-action="List"
   asp-controller="Book"
   asp-route-type="">
    Home
</a>

@foreach (string type in Model)
{
    <a class="btn btn-block
     @(type == ViewBag.SelectedType ? "btn-primary": "btn-secondary")"
       asp-action="List"
       asp-controller="Book"
       asp-route-type="@type"
       asp-route-bookPage="1">
        @type
    </a>
}