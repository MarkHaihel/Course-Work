@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("List", "Book", new { area = "" })" method="post" id="logoutForm">
        <ul class="nav navbar-nav navbar-right flex-md-row">
                @if (await UserManager.IsInRoleAsync((await UserManager.GetUserAsync(User)), "shop admin"))
                {
                    <li class="nav-item">
                        <a style="color:lightgreen" class="nav-link px-3" href="/ShopAdmin/Index" title="Books">Shop Admin</a>
                    </li>
                }
                @if (await UserManager.IsInRoleAsync((await UserManager.GetUserAsync(User)), "user admin"))
                {
                    <li class="nav-item">
                        <a style="color:orangered" class="nav-link px-3" href="/UsersAdmin/Index" title="Users">Users Admin</a>
                    </li>
                }
                @if (await UserManager.IsInRoleAsync((await UserManager.GetUserAsync(User)), "news admin"))
                {
                    <li class="nav-item">
                        <a style="color:yellow" class="nav-link px-3" href="/NewsAdmin/Index" title="News">News Admin</a>
                    </li>
                }
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Профіль" class="nav-link text-white px-3">@UserManager.GetUserName(User)</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn-danger btn-sm btn m-1">Вийти</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right flex-md-row">
        <li class="nav-item pl-md-3"><a asp-area="Identity" asp-page="/Account/Register" class="nav-link">Реєстрація</a></li>
        <li class="nav-item pl-md-3"><a asp-area="Identity" asp-page="/Account/Login" class="nav-link">Вхід</a></li>
    </ul>
}