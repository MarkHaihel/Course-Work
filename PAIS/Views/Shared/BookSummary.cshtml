@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            <a asp-controller="Book" asp-action="Details" asp-route-bookId="@Model.BookID">@Model.Name</a>
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">@Model.Description</div>
    <form id="@Model.BookID" asp-action="AddToCart"
          asp-controller="Cart" method="post">
        <input type="hidden" asp-for="BookID" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            <button type="submit"
                    class="btn btn-success btn-sm pull-right" style="float:right">
                В корзину
            </button>
        </span>
    </form>
</div>