@model Book
<div class="row">
    <div class="col-lg-3 d-flex flex-column">
        <img class="mx-auto p-2" style="width:200px; height:280px;" alt="@Model.Name" src="data:image/jpeg;base64,@(Convert.ToBase64String(@Model.Image))" />
    </div>
    <div class="col-lg-9 p-3">
        <div class="">
            <h4>
                @Model.Name

                <span class="badge badge-pill badge-primary col-2 p-2" style="float:right">
                    @Model.Price.ToString("c")
                </span>
            </h4>
        </div>
        <div class="card-text p-1"><h5>@Model.Description</h5></div>
        <p>
            Автор: @Model.Author<br />
            Формат: @Model.Format<br />
            Дата публікації: @Model.PublicationDate<br />
            Тип видання: @Model.PublicationType<br />
            Палітурка: @Model.Binder<br />
            Обсяг: @Model.Amount с.
        </p>
    </div>
</div>
<div class="p-4">
    <p>Анотація: @Model.Anotation</p>
    <p>ISBNCode: @Model.ISBNCode</p>
</div>
<form id="@Model.BookID" asp-action="AddToCart"
      asp-controller="Cart" method="post" class="m-2">
    <input type="hidden" asp-for="BookID" />
    <input type="hidden" name="returnUrl"
           value="@ViewContext.HttpContext.Request.PathAndQuery()" />
    <span class="card-text p-1">
        <button type="submit"
                class="btn btn-success pull-right" style="float:right">
            В корзину
        </button>
    </span>
</form>