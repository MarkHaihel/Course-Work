@using Microsoft.AspNetCore.Identity;

@inject UserManager<IdentityUser> userManager
@inject SignInManager<IdentityUser> signInManager

@model Comment

@if (signInManager.IsSignedIn(User))
{
    <form asp-action="AddComment" asp-controller="Book" method="post">
        <div class="form-group">
            <input type="hidden" asp-for="OwnerId" value="@((await userManager.GetUserAsync(User)).Id)" />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="BookId" value="@Model.BookId" />
        </div>
        <div class="form-group">
            <textarea class="form-control" asp-for="Text" required rows="3"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Comment" class="btn btn-success btn-sm" />
        </div>
    </form>
}
else
{
    <p>Для того щоб залишити коментар авторизуйтесь або зареєструйтесь!</p>
}