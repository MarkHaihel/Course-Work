@model EditUserViewModel
@{
    ViewData["Title"] = "Edit user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="p-1">Редагування користувача</h2>
<hr />

<div class="row ">
    <div class="col-md-5">
        <form asp-action="EditUser" asp-controller="UsersAdmin">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Логін</label>
                <input type="text" asp-for="LoginName" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
