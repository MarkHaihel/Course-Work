@model BooksListViewModel

@{
    ViewBag.Title = "Видання";
    Layout = "_Layout";
}
<div class="row">
    <div id="categories" class="col-md-3 col-sm-12">
        @await Component.InvokeAsync("NavigationMenu")
    </div>

    <div class="col-md-9 col-sm-12">
        @foreach (Book b in Model.Books)
        {
            @await Html.PartialAsync("BookSummary", b)
        }
    </div>
</div>

<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" page-url-category="@Model.CurrentType"
     class="btn-group pull-right m-1">
</div>
